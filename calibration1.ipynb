import cv2
import numpy as np
import glob
import os

# === CONFIG ===
checkerboard_size = (9, 6)  # Inner corners, not squares! (9x6 checkerboard)
save_dir = 'calibration_images'
result_file = 'camera_calibration.npz'

# Make directory for images
os.makedirs(save_dir, exist_ok=True)

# Initialize object points (0,0,0) to (8,5,0) for 9x6 checkerboard
objp = np.zeros((checkerboard_size[0] * checkerboard_size[1], 3), np.float32)
objp[:, :2] = np.mgrid[0:checkerboard_size[0], 0:checkerboard_size[1]].T.reshape(-1, 2)

objpoints = []  # 3D real-world points
imgpoints = []  # 2D image plane points

# Start video capture
cap = cv2.VideoCapture(0)

print("Press 's' to save an image when the checkerboard is detected.")
print("Press 'q' to quit and start calibration.")

image_count = 0

while True:
    ret, frame = cap.read()
    if not ret:
        break

    gray = cv2.cvtColor(frame, cv2.COLOR_BGR2GRAY)

    # Find the checkerboard corners
    ret_corners, corners = cv2.findChessboardCorners(gray, checkerboard_size, None)

    display_frame = frame.copy()

    if ret_corners:
        cv2.drawChessboardCorners(display_frame, checkerboard_size, corners, ret_corners)

    cv2.imshow('Calibration - Press s to save, q to quit', display_frame)

    key = cv2.waitKey(1) & 0xFF

    if key == ord('s') and ret_corners:
        filename = os.path.join(save_dir, f'calib_{image_count:03d}.jpg')
        cv2.imwrite(filename, frame)
        objpoints.append(objp)
        refined_corners = cv2.cornerSubPix(
            gray, corners, (11, 11), (-1, -1),
            (cv2.TERM_CRITERIA_EPS + cv2.TERM_CRITERIA_MAX_ITER, 30, 0.001)
        )
        imgpoints.append(refined_corners)
        print(f"Saved {filename}")
        image_count += 1

    elif key == ord('q'):
        break

cap.release()
cv2.destroyAllWindows()

# === Perform calibration if enough images collected ===
if len(objpoints) < 5:
    print("Not enough valid checkerboard detections for calibration.")
else:
    print("Calibrating...")

    ret, camera_matrix, dist_coeffs, rvecs, tvecs = cv2.calibrateCamera(
        objpoints, imgpoints, gray.shape[::-1], None, None
    )

    np.savez(result_file, camera_matrix=camera_matrix, dist_coeffs=dist_coeffs)

    print(f"\nCalibration complete! Results saved to '{result_file}'")
    print("Camera Matrix:\n", camera_matrix)
    print("Distortion Coefficients:\n", dist_coeffs)
